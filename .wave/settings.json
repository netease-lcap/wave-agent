{
  "env": {
    "WAVE_MODEL": "gemini-3-flash"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(pnpm:*)",
      "Bash(.specify/scripts/bash/:*)",
      "Bash(./.specify/scripts/bash/:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npx tsx:*)",
      "Bash(sleep:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(npm:*)",
      "Bash(touch:*)",
      "Bash(node packages/code/dist/index.js :*)"
    ],
    "additionalDirectories": ["../wave-plugins-official"]
  },
  "enabledPlugins": {
    "typescript-lsp@wave-plugins-official": true
  }
}
