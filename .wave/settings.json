{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "./.wave/scripts/check-ts-file.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "pnpm run type-check && pnpm run lint",
        "description": "Run full type-check and lint before stopping"
      }
    ]
  }
}
