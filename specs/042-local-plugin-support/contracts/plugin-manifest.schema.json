{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PluginManifest",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier and slash command namespace"
    },
    "description": {
      "type": "string",
      "description": "Shown in the plugin manager"
    },
    "version": {
      "type": "string",
      "description": "Semantic versioning"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"]
    }
  },
  "required": ["name", "description", "version"]
}
