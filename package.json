{
  "name": "wave-workspace",
  "version": "0.3.3",
  "private": true,
  "description": "Monorepo for Wave Code CLI and Agent SDK",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "wave": "pnpm -F wave-code wave",
    "wave:debug": "LOG_LEVEL=DEBUG pnpm -F wave-code wave",
    "watch": "pnpm -r --parallel watch",
    "build": "pnpm -r build",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "version:patch": "pnpm -r version:patch",
    "version:minor": "pnpm -r version:minor",
    "version:major": "pnpm -r version:major",
    "tag": "node scripts/version.js none --tag",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "MIT"
}
