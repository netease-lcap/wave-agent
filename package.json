    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT"
